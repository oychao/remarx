{
  "compilerOptions": {
    "module": "CommonJS",
    "jsx": "react",
    "target": "ES2015",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDirs": ["src"],
    "strict": true /* enable all strict type-checking options */,
    "typeRoots": ["./typings"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true
  },
  "exclude": ["node_modules", ".vscode-test", "demo", "view", "out"]
}
