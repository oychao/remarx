{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "paths": {
      "comps/*": ["src/components/*"],
      "store/*": ["src/store/*"],
      "utils/*": ["src/utils/*"]
    },
    "sourceMap": true,
    "target": "ES2015"
  },
  "include": ["./src/**/*", "../bin/**/*"],
  "exclude": ["node_modules"]
}
